<Window x:Class="DhcpProba.View.BeallitasokPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DhcpProba.View"
        mc:Ignorable="d"
        Title="BeallitasokPopup" Height="250" Width="600">
    <Grid>
        <Grid VerticalAlignment="Stretch">
            <Label x:Name="label" Content="Berletidő:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Right" Text="{Binding BerletidoEdit}" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Margin="0,4,10,0"/>
        </Grid>
        <DockPanel VerticalAlignment="Bottom" Grid.Row="1">
            <Button x:Name="button" Command="{Binding Cancel}" Content="Mégse" HorizontalAlignment="Left"  VerticalAlignment="Bottom"/>
            <Button x:Name="button1" Command="{Binding Change}" Content="Alkalmaz" HorizontalAlignment="Right"  VerticalAlignment="Bottom"/>
        </DockPanel>

    </Grid>
</Window>
