<Window x:Class="DhcpProba.View.KliensUzenet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DhcpProba.View"
        mc:Ignorable="d"
        Title="KliensUzenet" Height="200" Width="300">
    <DockPanel>
        <Button x:Name="button" Content="Kérés" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Command="{Binding Confirm}" />
        <Label x:Name="label" Content="MAC: " VerticalAlignment="Center"/>
        <TextBox x:Name="textBox" Text="{Binding EditText}" TextWrapping="Wrap" Height="15" DockPanel.Dock="Left" Width="167"/>
        <Button x:Name="button1" Content="Mégse" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Command="{Binding Cancel}" DockPanel.Dock="Right" />
        
    </DockPanel>

</Window>
